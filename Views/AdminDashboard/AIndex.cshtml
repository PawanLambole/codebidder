@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/aLayout.cshtml";
}

<div>
    <!-- Main Content Area -->
    <main class="ms-auto mt-5 px-3">
        <div class="container" style="margin-top: 50px;">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold" style="color: #395A7F;">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard Overview
                </h4>
                <button class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-arrow-repeat me-2"></i> Refresh
                </button>
            </div>

            <!-- Stats Section -->
            <div class="row g-3">
                <div class="col-lg-3 col-md-6">
                    <div class="card text-center shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title text-secondary">Total Clients</h5>
                            <p class="card-text display-6 fw-bold">
                                @ViewData["TotalUsers"]
                                <i class="bi bi-people-fill text-primary ms-2"></i>
                            </p>
                        </div>
                       
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card text-center shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title text-secondary">Developers</h5>
                            <p class="card-text display-6 fw-bold">
                                @ViewData["TotaldUsers"]
                                <i class="bi bi-folder-fill text-success ms-2"></i>
                            </p>
                        </div>
                        
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card text-center shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title text-secondary">Quotations</h5>
                            <p class="card-text display-6 fw-bold">
                                @ViewData["TotalQuotations"]
                                <i class="bi bi-file-earmark-text-fill text-warning ms-2"></i>
                            </p>
                        </div>
                       
                    </div>
                </div>
            </div>

            <!-- Additional Sections -->
            <div class="row g-4 mt-4">
                <!-- Project Success Rate Chart -->
                <div class="col-lg-8">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title text-secondary">
                                <i class="bi bi-bar-chart-fill me-2"></i> Project Success Rate
                            </h5>
                            <div class="mt-3 text-muted">
                                <!-- Placeholder for Chart -->
                                <canvas id="successRateChart" style="height: 300px;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title text-secondary">
                                <i class="bi bi-clock-history me-2"></i> Recent Activity
                            </h5>
                            <ul class="list-group mt-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="bi bi-file-plus me-2 text-primary"></i> New project submitted
                                    </span>
                                    <span class="badge bg-primary rounded-pill">Just now</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="bi bi-check-circle me-2 text-success"></i> Quotation approved
                                    </span>
                                    <span class="badge bg-success rounded-pill">10 mins ago</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="bi bi-person-plus me-2 text-info"></i> User registered
                                    </span>
                                    <span class="badge bg-info rounded-pill">1 hour ago</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="bi bi-check2-circle me-2 text-secondary"></i> Project completed
                                    </span>
                                    <span class="badge bg-secondary rounded-pill">2 days ago</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
