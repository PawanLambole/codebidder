@model CodeBidder.Models.User

@{
    Layout = "~/Views/Shared/ClientLayout.cshtml"; // Specify the path to your new layout
}

<div class="container">
    <!-- Welcome Section -->
    <header class="bg-light text-center py-5 mb-4 rounded" style="box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        <h1 class="display-4" style="color: #395A7F;">Welcome to CodeBidder</h1>
        <p class="lead" style="color: #6E9FC1;">Your trusted partner in software development!</p>
    </header>

    <!-- Display greeting message -->
    @if (TempData["ClientName"] != null)
    {
        <h3 class="text-center text-success">Hello @TempData["ClientName"], Welcome back!</h3>
    }
    else
    {
        <h3 class="text-center">Welcome to CodeBidder! Let’s get started.</h3>
    }

    <!-- Instructions Section -->
    <section class="my-5">
        <h2 class="text-center" style="color: #395A7F; font-weight: 600;">How It Works</h2>
        <div class="list-group">
            <div class="list-group-item">
                <h5 class="mb-1">1. Submit Your Project Idea</h5>
                <p class="mb-1">Fill out the project details form to share your idea with us.</p>
            </div>
            <div class="list-group-item">
                <h5 class="mb-1">2. Receive Quotes from Developers</h5>
                <p class="mb-1">Get multiple quotations from our network of skilled developers.</p>
            </div>
            <div class="list-group-item">
                <h5 class="mb-1">3. Choose Your Developer</h5>
                <p class="mb-1">Review the quotes and select the developer that fits your needs.</p>
            </div>
            <div class="list-group-item">
                <h5 class="mb-1">4. Start Your Project</h5>
                <p class="mb-1">Begin your project and bring your ideas to life!</p>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="text-center my-5">
        <h2 style="color: #395A7F;">Ready to Start?</h2>
        <a href="@Url.Action("Requirements", "ClientDashboard")" class="btn btn-primary btn-lg"
           style="background-color: #395A7F; border-radius: 1rem; padding: 0.8rem 2rem;">
            Submit Your Project Idea
        </a>
    </section>

    <footer class="text-center mt-5">
        <p class="mb-0" style="color: #6E9FC1;">&copy; 2024 CodeBidder. All Rights Reserved.</p>
    </footer>
</div>
