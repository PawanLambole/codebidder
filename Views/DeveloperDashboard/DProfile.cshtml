@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/DeveloperLayout.cshtml";
}
<div class="container mt-5">
    <h1 class="mb-4">Profile: @Model.Username</h1>

    <div class="card shadow-sm border-light">
        <div class="card-header" style="background-color: #395A7F; color: white;">
            <h5 class="mb-0">Profile Details</h5>
        </div>
        <div class="card-body">
            <p><strong>Full Name:</strong> @Model.FirstName @Model.LastName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>User Type:</strong> @Model.UserType</p>

            <div class="mt-4">
                <a href="@Url.Action("DUpdate", "DeveloperDashboard")" class="btn" style="background-color: #395A7F; color: white;">Update Profile</a>
                <button type="button" class="btn btn-danger ms-3" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">Delete Account</button>
                <a href="@Url.Action("Logout", "User")" class="btn btn-outline-primary ms-3">Logout</a>
            </div>
        </div>
    </div>
</div>

<!-- Delete Account Confirmation Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAccountModalLabel">Confirm Account Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete your account? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <!-- Form submission for account deletion -->
                <form asp-action="DeleteAccount" asp-controller="User" method="post">
                    <button type="submit" class="btn btn-danger">Delete Account</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px; /* Rounded corners for the cards */
    }

    .card-header {
        border-bottom: none; /* Remove bottom border from card header */
    }

    .btn {
        margin-top: 20px;
        padding: 10px 20px;
        text-align: center;
        font-weight: bold;
        display: inline-block;
        transition: background-color 0.3s, color 0.3s;
    }

    .btn-danger:hover {
        background-color: #d9534f; /* Slightly darker danger shade */
        color: #fff;
        text-decoration: none;
    }
</style>
