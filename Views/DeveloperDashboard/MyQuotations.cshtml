@model IEnumerable<CodeBidder.Models.Quotation>

@{
    ViewData["Title"] = "My Quotations";
    Layout = "~/Views/Shared/DeveloperLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">My Quotations</h1>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var quotation in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card shadow-sm border-light">
                        <div class="card-header bg-primary text-white text-center">
                            <h5 class="mb-0">@quotation.Project.ProjectName</h5>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@quotation.Project.ProjectDescription</h5>
                            <p class="card-text">Estimated Cost: @quotation.EstimatedCost</p>
                            <p class="card-text">Estimated Timeline: @quotation.Timeline days</p>
                            <p class="card-text">Additional Notes: @quotation.AdditionalDetails</p>
                            <div class="text-center">
                                <a href="@Url.Action("ViewQuotationDetails", "DeveloperDashboard", new { id = quotation.Id })" class="btn btn-success">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">You have not submitted any quotations yet.</div>
    }
</div>
