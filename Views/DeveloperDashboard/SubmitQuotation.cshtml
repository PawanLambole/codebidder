@model CodeBidder.Models.Quotation

@{
    ViewData["Title"] = "Submit Quotation";
    Layout = "~/Views/Shared/DeveloperLayout.cshtml";

}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Submit Quotation for @ViewBag.ProjectName</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
                    }

                    <form asp-action="SubmitQuotation" method="post" class="needs-validation" novalidate>
                        <input type="hidden" name="ProjectId" value="@ViewBag.ProjectId" />

                        <div class="mb-3">
                            <label for="EstimatedCost" class="form-label">Estimated Cost ($)</label>
                            <input type="number" id="EstimatedCost" name="EstimatedCost" class="form-control" required />
                            <div class="invalid-feedback">Please provide an estimated cost.</div>
                        </div>

                        <div class="mb-3">
                            <label for="Timeline" class="form-label">Estimated Timeline</label>
                            <input type="text" id="Timeline" name="Timeline" class="form-control" required />
                            <div class="invalid-feedback">Please provide an estimated timeline.</div>
                        </div>

                        <div class="mb-3">
                            <label for="AdditionalDetails" class="form-label">Additional Details</label>
                            <textarea id="AdditionalDetails" name="AdditionalDetails" class="form-control" rows="4" required></textarea>
                            <div class="invalid-feedback">Please provide additional details.</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Submit Quotation</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
