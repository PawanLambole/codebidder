@model CodeBidder.Models.Quotation

@{
    ViewData["Title"] = "Quotation Details";
    Layout = "~/Views/Shared/DeveloperLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">Quotation Details</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5>@Model.Project.ProjectName</h5>
        </div>
        <div class="card-body">
            <p><strong>Project Description:</strong> @Model.Project.ProjectDescription</p>
            <p><strong>Estimated Cost:</strong> @Model.EstimatedCost</p>
            <p><strong>Estimated Timeline:</strong> @Model.Timeline days</p>
            <p><strong>Additional Notes:</strong> @Model.AdditionalDetails</p>
            <p><strong>Submitted on:</strong> @Model.SubmissionDate.ToString("MM/dd/yyyy")</p>
        </div>
    </div>
</div>
